<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace 名称空间，指定为接口的全类名-->
<!--id 唯一标识-->
<!--resultType 返回值类型 这里就是返回一个employee的对象-->
<!--#{id} 从传递过来的参数中取出id值-->
<mapper namespace="com.example.demo.permission.repository.UserInfoRepository">
    <select id="findByUsername" resultType="com.example.demo.permission.bean.UserInfo">
        select *
        from `spring-security`.user_info
        where username = #{username};
    </select>
    <insert id="insertData">
        insert into `spring-security`.user_info (password, role, username)
        values (#{password}, #{role}, #{username});
    </insert>
</mapper>